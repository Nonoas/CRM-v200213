<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="indi.nonoas.crm.dao.UsrGdsMapper">
    <resultMap id="UserGoods" type="indi.nonoas.crm.beans.UserGoods"/>
    <select id="selectByUser" parameterType="string" resultMap="UserGoods">
        select *
        from user_goods
        where user_id = #{user_id}
    </select>

    <update id="replaceUserGoods" parameterType="list">
        replace into user_goods(user_id, goods_id, amount)
        values
        <foreach collection="userGoodsList" item="usr_gds" index="index" separator=",">
            (#{usr_gds.user_id}, #{usr_gds.goods_id}, #{usr_gds.amount})
        </foreach>
    </update>
</mapper>